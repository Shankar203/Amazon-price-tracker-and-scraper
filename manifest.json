{
    "manifest_version": 2,
    "name": "Amazon price tracker and scraper",
    "version":"1.2.0",
    "description":"keep track of product price",
    "icons": { 
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "./icons/icon16.png"
        },
        "default_title":"Amazon price tracker and scraper"
    },
    "permissions":[
        "tabs",
        "storage"
    ]
}